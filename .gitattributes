# Ensure all text files have their line endings normalized
* text=auto

# Unity YAML files
*.anim text eol=lf
*.asset text eol=lf
*.mat text eol=lf
*.meta text eol=lf
*.prefab text eol=lf
*.unity text eol=lf

# Treat these file types as binary
*.wav binary
*.mp3 binary
*.aif binary
*.aiff binary
*.ogg binary

# Treat other binary file types correctly
*.mod binary
*.s3m binary
*.xm binary
*.mov binary
*.avi binary
*.mpg binary
*.mpeg binary
*.mp4 binary
*.3ds binary
*.fbx binary
*.obj binary
*.ttf binary
*.otf binary
*.dll binary
*.exe binary
*.zip binary
*.7z binary
*.gz binary
*.rar binary
*.tar binary
